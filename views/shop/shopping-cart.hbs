{{# if items }}
	<div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" style="font-size:20px;">
            <strong>My Cart Items</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each items }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.qty }}</span>
                        <strong>{{ this.item.title }} - ${{ this.item.price }}</strong>
                        <span class="label label-success">${{ this.price }}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/increase/{{this.item.id}}">Increase</a></li>
                                <li><a href="/reduce/{{this.item.id}}">Reduce</a></li>
                                <li><a href="/remove/{{this.item.id}}">Remove</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
    	 <div class="col-sm-3 col-md-3 col-md-offset-3 col-sm-offset-3">
            <a href="/" type="button" class="btn btn-success">Continue Shopping</a>
        </div>
        <div class="col-sm-3 col-md-3 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" style="font-size:20px;">
            <strong>No Items in Cart</strong>
        </div>
    </div>
     <hr>
    <div class="row">
    	 <div class="col-sm-3 col-md-3 col-md-offset-3 col-sm-offset-3">
            <a href="/" type="button" class="btn btn-success">Continue Shopping</a>
        </div>
    </div>
{{/if}}

